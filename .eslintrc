{
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:tailwindcss/recommended","plugin:jsx-a11y/recommended"],
  "plugins": ["react","tailwindcss","jsx-a11y"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "rules": {
    "no-console": ["warn"],
    "no-nested-ternary": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "tailwindcss/no-custom-classname": "off"
  }
}
